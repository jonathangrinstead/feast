<div class="card mx-auto w-4/6 bg-base-100 shadow-xl mt-10">
  <div class="card-body">

    <h2 class="text-5xl mb-4">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :photo %><br />
        <%= f.file_field :photo, class:"file-input file-input-bordered w-full max-w-xs mt-2 mb-4"%>
      </div>

      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username, autofocus: true, class: "input input-bordered input-primary w-full max-w-xs mt-2 mb-4" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered input-primary w-full max-w-xs mt-2 mb-4"%>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered input-primary w-full max-w-xs mt-2 mb-4" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered input-primary w-full max-w-xs mt-2 mb-4" %>
      </div>

    <div class="flex mt-2">
      <div class="actions">
        <%= f.submit "Sign up", class:"btn btn-primary mr-2" %>
      </div>
    <% end %>

      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
