<%= form_with(model: @recipe, local: true) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :recipe_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :recipe_description %>
  </div>

  <div class="field">
    <%= form.label :shareable %>
    <%= form.check_box :shareable, id: :recipe_shareable %>
  </div>

  <h3>Ingredients</h3>
  <div id="ingredients">
    <%= form.fields_for :ingredients do |ingredient_form| %>
      <div class="field">
        <%= ingredient_form.label :name %>
        <%= ingredient_form.text_field :name %>
      </div>

      <div class="field">
        <%= ingredient_form.label :quantity %>
        <%= ingredient_form.text_field :quantity %>
      </div>
    <% end %>
  </div>

  <h3>Instructions</h3>
  <div id="instructions">
    <%= form.fields_for :instructions do |instruction_form| %>
      <div class="field">
        <%= instruction_form.label :step_number %>
        <%= instruction_form.number_field :step_number %>
      </div>

      <div class="field">
        <%= instruction_form.label :description %>
        <%= instruction_form.text_area :description %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
